{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":configMigration",
    ":pinDevDependencies",
    "abandonments:recommended",
    "security:minimumReleaseAgeNpm",
    ":maintainLockFilesWeekly"
  ],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["nix"],
      "groupName": "nix dependencies"
    }
  ],
  "customManagers": [
    {
      "description": "Sync standard Python dependencies with Nixpkgs Repology (NixOS 25.11)",
      "customType": "regex",
      "fileMatch": ["^pyproject\\.toml$"],
      "matchStrings": [
        "\"(?<depName>numpy|websockets|pydantic|smbus2|scipy|pyserial-asyncio)==(?<currentValue>[0-9\\.]+)\""
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "nixos_25_11/python3Packages.{{depName}}",
      "versioningTemplate": "loose"
    },
    {
      "description": "Sync Python version between pyproject.toml and configuration.nix",
      "customType": "regex",
      "fileMatch": ["^pyproject\\.toml$", "^configuration\\.nix$"],
      "matchStrings": [
        "requires-python = \">=(?<currentValue>3\\.[0-9]+)\"",
        "pkgs\\.python(?<currentValue>3[0-9]+)\\.withPackages"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>3\\.[0-9]+)$"
    },
    {
      "description": "Sync custom Python packages from configuration.nix and pyproject.toml via PyPI",
      "customType": "regex",
      "fileMatch": ["^pyproject\\.toml$", "^configuration\\.nix$"],
      "matchStrings": [
        "pname = \"(?<depName>numpydantic)\";\\s+version = \"(?<currentValue>[0-9\\.]+)\";",
        "\"(?<depName>numpydantic)==(?<currentValue>[0-9\\.]+)\""
      ],
      "datasourceTemplate": "pypi"
    },
    {
      "description": "Sync GitHub-based Python packages (bmi270)",
      "customType": "regex",
      "fileMatch": ["^pyproject\\.toml$", "^configuration\\.nix$"],
      "matchStrings": [
        "pname = \"(?<depName>bmi270)\";\\s+version = \"(?<currentValue>[0-9\\.]+)\";[\\s\\S]*?rev = \"(?<currentDigest>[a-f0-9]+)\";",
        "\"(?<depName>bmi270)==(?<currentValue>[0-9\\.]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "CoRoLab-Berlin/bmi270_python"
    },
    {
      "description": "Sync GitHub-based Python packages (ms5837)",
      "customType": "regex",
      "fileMatch": ["^pyproject\\.toml$", "^configuration\\.nix$"],
      "matchStrings": [
        "pname = \"(?<depName>ms5837)\";\\s+version = \"(?<currentValue>[0-9\\.]+)\";[\\s\\S]*?rev = \"(?<currentDigest>[a-f0-9]+)\";",
        "ms5837 @ git\\+https://github\\.com/(?<depName>bluerobotics/ms5837-python)\\.git@(?<currentDigest>[a-f0-9]+)"
      ],
      "datasourceTemplate": "github-tags"
    }
  ]
}
