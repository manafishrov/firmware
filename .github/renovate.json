{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":configMigration",
    ":pinDevDependencies",
    "abandonments:recommended",
    "security:minimumReleaseAgeNpm",
    ":maintainLockFilesWeekly"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "nix"
      ],
      "groupName": "nix dependencies"
    },
    {
      "matchDatasources": [
        "repology"
      ],
      "versioning": "loose"
    }
  ],
  "customManagers": [
    {
      "description": "Standard Python dependencies from Nixpkgs (via Repology)",
      "customType": "regex",
      "managerFilePatterns": [
        "/^pyproject\\.toml$/"
      ],
      "matchStrings": [
        "\"(?<depName>(?:numpy|websockets|pydantic|smbus2|scipy|pyserial-asyncio))==(?<currentValue>[0-9\\.]+)\""
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "nix_stable_25_11/python:{{depName}}"
    },
    {
      "description": "Custom Python packages via PyPI (numpydantic, bmi270)",
      "customType": "regex",
      "managerFilePatterns": [
        "/^pyproject\\.toml$/",
        "/^configuration\\.nix$/"
      ],
      "matchStrings": [
        "pname = \"(?<depName>numpydantic|bmi270)\";\\s+version = \"(?<currentValue>[0-9\\.]+)\";",
        "\"(?<depName>numpydantic|bmi270)==(?<currentValue>[0-9\\.]+)\""
      ],
      "datasourceTemplate": "pypi"
    },
    {
      "description": "GitHub-only Python packages via commits (ms5837)",
      "customType": "regex",
      "managerFilePatterns": [
        "/^pyproject\\.toml$/",
        "/^configuration\\.nix$/"
      ],
      "matchStrings": [
        "pname = \"ms5837\";\\s+version = \"(?<currentValue>[0-9\\.]+)\";[\\s\\S]*?rev = \"(?<currentDigest>[a-f0-9]+)\";",
        "ms5837 @ git\\+https://github\\.com/bluerobotics/ms5837-python\\.git@(?<currentDigest>[a-f0-9]+)"
      ],
      "datasourceTemplate": "github-commits",
      "depNameTemplate": "bluerobotics/ms5837-python"
    },
    {
      "description": "Python version sync between pyproject.toml and configuration.nix",
      "customType": "regex",
      "managerFilePatterns": [
        "/^pyproject\\.toml$/",
        "/^configuration\\.nix$/"
      ],
      "matchStrings": [
        "requires-python = \">=(?<currentValue>3\\.[0-9]+)\"",
        "pkgs\\.python(?<currentValue>3[0-9]+)\\.withPackages"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>3\\.[0-9]+)$"
    }
  ]
}
